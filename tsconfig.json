{
    "compilerOptions": {
        "checkJs": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es5",
        "module": "esnext",
        "rootDir": "src",
        "outDir": "./build",
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "jsx": "react-jsx",
        "declaration": false,
        "strict": true,
        "lib": ["esnext", "dom.iterable", "dom"],
        "sourceMap": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "skipLibCheck": true
    },
    "exclude": [
        "dist",
        "node_modules",
        "build",
        ".vscode",
        "coverage",
        ".npm",
        ".yarn",
        "src/stories/**/*",
        "*.stories.tsx",
        "*.stories.ts",
        "*.stories.js",
        "*.stories.jsx"
    ],
    "include": ["src/**/*"]
}
